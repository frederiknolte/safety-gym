<mujoco>
    <size njmax="3000" nconmax="1000"/>
    <option timestep="0.002"/>
    <default>
        <geom condim="1" density="1." rgba="1 0 0 1" solimp="1.0 1.0 0.001 0.1 1" solref="-100.0 -1000.0" friction="0.0 0.0 0.0"/>
        <joint damping=".00"/>
        <motor ctrlrange="-300 300" ctrllimited="false" forcerange="-300. 300." forcelimited="false"/>
        <site size="0.032" type="sphere"/>
    </default>
    <worldbody>
        <geom name="floor" size="5 5 0.1" type="plane" condim="1"/>
        <body name="robot" pos="0 0 .4">
            <camera name="vision" pos="0 0 .15" xyaxes="0 -1 0 .4 0 1" fovy="90"/>
            <joint type="slide" axis="1 0 0" name="x" damping="0.0"/>
            <joint type="slide" axis="0 1 0" name="y" damping="0.0"/>
            <geom name="robot" type="sphere" size=".4" mass="0.12"/>
            <!-- <geom name="pointarrow" pos="0.1 0 0" size="0.05 0.05 0.05" type="box"/> -->
            <site name="robot" rgba="1 0 0 .1"/>
        </body>
    </worldbody>
    <sensor>
        <!-- Used for observation -->
        <accelerometer site="robot" name="accelerometer"/>
        <velocimeter site="robot" name="velocimeter"/>
        <!-- <gyro site="robot" name="gyro"/> -->
        <!-- <magnetometer site="robot" name="magnetometer"/> -->

        <!-- Used for intrinsic constraints -->
        <subtreecom body="robot" name="subtreecom"/>
        <subtreelinvel body="robot" name="subtreelinvel"/>
        <subtreeangmom body="robot" name="subtreeangmom"/>
    </sensor>
    <actuator>
        <motor gear="1.5 0 0 0 0 0" site="robot" name="x"/>
        <motor gear="0 1.5 0 0 0 0" site="robot" name="y"/>
    </actuator>
</mujoco>
